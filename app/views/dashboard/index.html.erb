<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>P2EP Knowledgebase</title>
  <%= include_gon(watch: true) %>
</head>
<body>

<div class="dashboard-wrapper">

  <!-- Dashboard Panels -->
  <div class="row">

    <!-- Side Panel -->
    <div class="col s3">
      <div class="card">
        <div class="card-content" id="side-panel">
          <!-- Side Panel Content -->
          <div class="search-wrapper">
            <div class="row">
              <div class="input-field col s9">
                <i class="material-icons prefix">search</i>
                <input type="text" id="search_input" name="query" class="autocomplete"></input>
              </div>
              <div class="input-field col s3">
                <a href="javascript:void(0);" id="search_button" class="waves-effect waves-light btn">Search</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Panel -->
    <div class="col s9">
      <div class="card">
        <div class="card-content" id="main-panel">
          <!-- Main Panel Content -->
          Main panel
          <table class="responsive-table highlight" id="search-results-table" class="search-results">
            <thead id="search-results-thead" class="search-results">
            <tr>
              <th data-field="uuid">App Id</th>
              <th data-field="name">Name</th>
              <th data-field="category">Category</th>
              <th data-field="species">Species</th>
              <th data-field="source">Source</th>
              <th data-field="source_id">Source Id</th>
              <th data-field="description">Description</th>
              <th data-field="more">More</th>
            </tr>
            </thead>
            <tbody id="search-results-tbody" class="search-results">

            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>

</body>
</html>